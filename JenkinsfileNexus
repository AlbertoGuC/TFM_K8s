pipeline {
    agent {
        kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                metadata:
                  labels:
                    jenkins/label-selector: "buildah-agent"
                  annotations:
                    "jenkins.io/delete-pod-on-completion": "true"
                spec:
                  restartPolicy: Never
                  terminationGracePeriodSeconds: 30
                  containers:
                  - name: buildah
                    image: quay.io/buildah/stable:latest
                    command: ["cat"]
                    tty: true
                    env:
                    - name: BUILDAH_ROOT
                      value: "/var/lib/containers"
                    securityContext:
                      capabilities:
                        add:
                          - SYS_ADMIN
                          - NET_RAW
                      runAsUser: 0
                    volumeMounts:
                    - mountPath: "/home/jenkins/agent"
                      name: "workspace-volume"
                      readOnly: false
                    - mountPath: "/var/lib/containers"
                      name: "buildah-storage"
                      readOnly: false
                  volumes:
                  - emptyDir: {}
                    name: "workspace-volume"
                  - emptyDir: {}
                    name: "buildah-storage"
            '''
        }
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('nexus')
    }
    stages {
        stage('Build') {
            steps {
                container('buildah') {
                    sh "buildah login --tls-verify=false -u '$DOCKERHUB_CREDENTIALS_USR' -p '$DOCKERHUB_CREDENTIALS_PSW' nexus:8082"
                    sh "buildah build --storage-driver=vfs -t nexus:8082/docker-priv/buildahjenkins2:latest ."
                    sh "buildah images -storage-driver=vfs"
                    sh "buildah push -storage-driver=vfs --tls-verify=false nexus:8082/docker-priv/buildahjenkins2:latest"
                    sh "buildah logout nexus:8082"
                }
            }
        }
    }
}
