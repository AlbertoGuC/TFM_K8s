pipeline {
    agent {
        kubernetes {
            cloud 'kubernetes' 
            label 'buildah' 
        }
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Build') {
            steps {
                    sh "buildah login -u '$DOCKERHUB_CREDENTIALS_USR' -p '$DOCKERHUB_CREDENTIALS_PSW' docker.io"
                    sh 'buildah build --storage-driver=vfs -t docker.io/alberguarchu/defensa:latest .'
                    sh "buildah push  docker.io/alberguarchu/defensa:latest"
                    sh "buildah logout docker.io"
            }
        }
    }
}
