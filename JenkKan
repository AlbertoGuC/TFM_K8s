pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: kaniko
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    args:
    - sleep
    - infinity
    volumeMounts:
    - name: kaniko-secret
      mountPath: /kaniko/.docker
  volumes:
  - name: kaniko-secret
    secret:
      secretName: dockercred
"""
    }
  }

  environment {
    IMAGE = "alberguarchu/jenkub:latest"
    GITHUB_CREDENTIALS = credentials('github')
  }

  stages {
    stage('Checkout') {
            steps {
                checkout scm
            }
        }

    stage('Kaniko') {
      steps {
        container('kaniko') {
          sh '''
            /kaniko/executor \
              --dockerfile=Dockerfile \
              --context=$(pwd) \
              --destination=$IMAGE \
              --insecure \
              --skip-tls-verify
          '''
        }
      }
    }
  }
}
