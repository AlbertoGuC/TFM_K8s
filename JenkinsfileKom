pipeline {
  agent any
  environment {
    GITRHUB_CREDENTIALS = credentials('github')
  }
  stages {
    stage('Build') {
      steps {
        sh '''
        mkdir -p k8s-manifests
        kompose convert -f docker-compose.yaml -o k8s-manifests/
        '''
      }
    }
    stage('Push') {
      steps{
        sh '''
          git config --global user.name "Jenkins"
          git config --global user.email "Jenkins@users.noreply.github.com"
          git add k8s-manifests/
          git commit -m "Auto-converted docker-compose to Kubernetes manifests" || echo "No changes to commit"
          git push origin main
        '''
      }  
    }
  }
}
