pipeline {
    agent any
    environment {
        GITHUB_CREDENTIALS = credentials('github')
        REPO = 'https://$GITHUB_CREDENTIALS_USR:$GITHUB_CREDENTIALS_PSW@github.com/AlbertoGuC/TFM_K8s'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
      
        stage('Crear rama Jenkins') {
            steps {
                sh '''
                    git config --global user.name "Jenkins"
                    git config --global user.email "jenkins@example.com"
                    
                    if git ls-remote --exit-code --heads REPO jenkins; then
                        echo "La rama jenkins ya existe"
                    else
                        git checkout -b jenkins
                        git push REPO jenkins
                    fi
                  '''
            }
        }
    }
}
