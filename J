pipeline {
    agent {
        kubernetes {
            cloud 'kubernetes'
            label 'k8-tools'   
        }
    }
    stages {
        stage('Main') {
            steps {
                sh "kubectl get pods -n prueba"
                sh "ls"
                sh "cd k8s-manifests"
                sh "kubectl apply -f ./k8s-manifests-K8 -n prueba"
                sh "kubectl get pods -n prueba"
            }
        }
    }
}
